<div class="login">
	<div class="form">

    <h1>Log in</h1>
		
		<%= form_for :session, url: login_path do |f| %>
    	<%= f.text_field :login, placeholder: "Login" %>
    	<%= f.password_field :password, placeholder: "Password" %>
    	<%= f.submit 'Log In', class: 'btn-submit' %>
    <% end %>
	
  </div>
</div>