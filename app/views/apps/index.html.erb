<h1><%= current_user ? 'Your Apps' : 'Default Apps' %></h1>

<% @apps.each_slice(3) do |apps| %>
  <div class="row">
    <% apps.each do |app| %>
      <div class="col-sm-4">
        <%= raw('<span class="glyphicon glyphicon-' + @shapes[app.color] + ' aria-hidden="true"></span>') %>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<!-- links for editing association -->
<% if current_user %>
  <%= link_to 'Edit apps', edit_user_path(current_user) %>
<% end %>

<br>