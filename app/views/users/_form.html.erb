<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Status</th>
    </tr>
    <% for app in @apps %>
      <tr>
        <td><%= check_box_tag "app_ids[]", app.id, checked = @user.apps.include?(app) %></td>
        <td><%=h app.name %></td>
        <td><%=h app.description %></td>
        <td><%=h app.color %></td>
        <td><%=h app.status %></td>
      </tr>
    <% end %>

  </table>
  <div class="actions">
    <%= f.submit "Add checked" %>
  </div>
<% end %>
